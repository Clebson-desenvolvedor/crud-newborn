<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <title>
        <%=title%>
    </title>
</head>

<body>
    <div class="content">
        <h1>Controle de Clientes Newborn - Alice</h1>
        <nav id="h-menu">
            <ul>
                <li><a href="/add" class="btn">Novo</a></li>
                <li><a href="/search" class="btn">Pesquisar</a></li>
                <li><a href="/list-all" class="btn">Listar todos</a></li>
            </ul>
        </nav>
        <hr>
        <div class="div-table">
            <table class="content-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome da mamãe</th>
                        <th>Nome do bebê</th>
                        <th>Data de nascimento</th>
                        <th>Sexo</th>
                        <th>Opções</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(function(d){ %>
                        <tr>
                            <td>
                                <%=d.id%>
                            </td>
                            <td>
                                <%=d.nome_mae%>
                            </td>
                            <td>
                                <%=d.nome_bebe%>
                            </td>
                            <td>
                                <%=moment(d.data_nasc).format('DD/MM/YYYY')%>
                            </td>
                            <td class="sexo">
                                <%=d.sexo%>
                            </td>
                            <td>
                                <a href="view/<%=d.id%>" class="btn btn-view"><i class="fas fa-eye"></i> Detalhes</a>
                                <a href="edit/<%=d.id%>" class="btn btn-edit"><i class="fas fa-edit"></i> Editar</a>
                                <a href="del/<%=d.id%>" class="btn btn-del"><i class="fas fa-trash-alt"></i> Excluir</a>
                            </td>
    
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
    
</html>