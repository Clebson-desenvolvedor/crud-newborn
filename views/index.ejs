<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>
        <%=title%>
    </title>
</head>

<body>
    <div class="content">
        <h1>Controle de Clientes Newborn - Alice</h1>
        <nav id="h-menu">
            <ul>
                <li><a href="/add" class="btn">Novo</a></li>
                <li><a href="/search" class="btn">Pesquisar</a></li>
                <li><a href="/list-all" class="btn">Listar Todos</a></li>
            </ul>
        </nav>
        <hr>
        <div class="div-table">
            <table class="content-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome da mamãe</th>
                        <th>Nome do bebê</th>
                        <th>Data de nascimento</th>
                        <th>Sexo</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(function(d){ %>
                        <tr>
                            <td>
                                <%=d.id%>
                            </td>
                            <td>
                                <%=d.nome_mae%>
                            </td>
                            <td>
                                <%=d.nome_bebe%>
                            </td>
                            <td>
                                <%=d.data_nasc%>
                            </td>
                            <td>
                                <%=d.sexo%>
                            </td>
                            <td>
                                <a href="edit/<%=d.id%>" class="btn">Editar</a>
                                <a href="del/<%=d.id%>" class="btn">Apagar</a>
                            </td>
    
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>